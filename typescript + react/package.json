{
  "name": "typescript-react-template",
  "version": "1.0.0",
  "description": "Basic template for TypeScript/React apps, includes HMR, Babel, CSS modules, tests with Jest/Enzyme",
  "keywords": [
    "TypeScript, React, Webpack, Jest, Babel, HMR"
  ],
  "author": "Grauero",
  "homepage": "https://github.com/Grauero/Webpack-boilerplates",
  "license": "ISC",
  "private": true,
  "sideEffects": [
    "*.scss",
    "*.css",
    "*.png",
    "*.jpg",
    "*.jpeg"
  ],
  "scripts": {
    "build": "webpack --config webpack-configuration/webpack.prod.js",
    "dev": "webpack-dev-server --open --config webpack-configuration/webpack.dev.js",
    "test": "jest --watch --no-cache",
    "test-clear-cache": "jest --clearCache",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/runtime": "^7.3.1",
    "@types/enzyme": "^3.1.16",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.21",
    "@types/react": "^16.8.1",
    "@types/react-dom": "^16.0.11",
    "@types/react-router-dom": "^4.3.1",
    "autoprefixer": "^9.4.7",
    "babel-jest": "^24.0.0",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "enzyme-to-json": "^3.3.5",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.0.0",
    "jsdom": "^13.2.0",
    "jsdom-global": "^3.0.2",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "react-hot-loader": "^4.6.5",
    "regenerator-runtime": "^0.13.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser": "^3.16.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-router-dom": "^4.3.1"
  }
}
